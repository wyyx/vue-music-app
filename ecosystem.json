{
	"apps": [
		{
			"name": "music-website",
			"script": "./server/server.js",
			"watch": true,
			"env": {
				"PORT": 8080,
				"NODE_ENV": "development"
			},
			"env_production": {
				"PORT": 8001,
				"NODE_ENV": "production"
			}
		},
		{
			"name": "api-app",
			"script": "./api.js",
			"instances": 4,
			"exec_mode": "cluster"
		}
	],
	"deploy": {
		"production": {
			"user": "root",
			"host": [ "149.28.11.92" ],
			"ref": "origin/master",
			"repo": "https://github.com/wyyx/vue-music-app.git",
			"path": "/www/music-website/production",
			"post-deploy": "yarn run start && pm2 startOrRestart ecosystem.json --env production",
			"env": {
				"NODE_ENV": "production"
			}
		}
	}
}
